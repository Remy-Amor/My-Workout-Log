<UserControl x:Class="MyWorkoutLog.view.Account"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyWorkoutLog.view" 
             xmlns:ViewModels="clr-namespace:MyWorkoutLog.MVVM.ViewModels" d:DataContext="{d:DesignInstance Type=ViewModels:AccountViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="450"
             Background="#1E6091">
    <UserControl.Resources>
        <!-- Color Palette -->
        <Color x:Key="DarkBlue">#FF1E6091</Color>
        <Color x:Key="Teal">#FF34A0A4</Color>
        <Color x:Key="LightGreen">#FF76C893</Color>
        <Color x:Key="SeaGreen">#FF52B69A</Color>
        <Color x:Key="Navy">#FF184E77</Color>


        <!-- Brushes -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Teal}" />
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource SeaGreen}" />
        <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource DarkBlue}" />
        <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource LightGreen}" />
        <SolidColorBrush x:Key="TextBrush" Color="White" />


        <!-- Button Style -->
        <Style TargetType="Button" x:Key="PrimaryButton">
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="MinWidth" Value="140" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="0,10,0,0" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Background" Value="{StaticResource AccentBrush}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="8" />
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryBrush}" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1">
            <Border CornerRadius="16" Background="{StaticResource CardBackgroundBrush}"
            HorizontalAlignment="Center" VerticalAlignment="Center" Width="450" Height="740">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">
                    <TextBlock Text="Account" FontSize="26" FontWeight="Bold" Foreground="Navy" Margin="0,0,0,16" />


                    <TextBlock Text="Current User:" FontSize="18" FontWeight="SemiBold" Foreground="Navy" />
                    <TextBlock Text="{Binding CurrentUsername, FallbackValue=Guest}" FontSize="22" FontWeight="Bold" Foreground="Navy" Margin="0,4,0,20" />

                    <Button x:Name="RegisterButton"
                        Style="{StaticResource PrimaryButton}"
                        Width="200" Height="45" Background="Turquoise"
                         Command="{Binding NavigateRegisterCommand}">
                        <TextBlock Text="Register" FontSize="18"/>
                    </Button>
                    <Button x:Name="SignInButton"
                        Style="{StaticResource PrimaryButton}"
                        Width="200" Height="45"
                        Visibility="{Binding SignInVisibility}" Command="{Binding NavigateSignInCommand}">     
                        <TextBlock Text="Sign In" FontSize="18"/>
                    </Button>


                    <Button Style="{StaticResource PrimaryButton}" x:Name="SignOutButton" Command="{Binding SignOutCommand}" Width="200" Height="45">
                        <TextBlock Text="Sign Out" FontSize="18" />
                    </Button>


                    <Button Style="{StaticResource PrimaryButton}" Command="{Binding ClearDataCommand}" x:Name="ClearDataButton"  Width="200" Height="45" Background="{StaticResource PrimaryBrush}">
                        <TextBlock Text="Clear Data" FontSize="18" />
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
