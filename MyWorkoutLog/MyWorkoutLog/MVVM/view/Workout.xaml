<UserControl x:Class="MyWorkoutLog.view.Workout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:t="clr-namespace:MyWorkoutLog.Services"
             xmlns:local="clr-namespace:MyWorkoutLog.view" 
             xmlns:viewmodels="clr-namespace:MyWorkoutLog.MVVM.ViewModels" 
             d:DataContext="{d:DesignInstance Type=viewmodels:WorkoutViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="450"
             Background="#1E6091">
    <UserControl.Resources>
        <viewmodels:IntConverter x:Key="IntConverter"/> 
        <!-- styling TextBoxes with rounded corners -->
        <Style x:Key="RoundedTextBox" TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="8" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="2"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="#184E77"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </UserControl.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Scrollable content -->
            <RowDefinition Height="Auto"/>
            <!-- Complete button -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Create Workout"
                   FontSize="28"
                   Foreground="White"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,20"/>

        <!-- Scrollable Workout Info -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical">
                <TextBox Text="{Binding WorkoutName, UpdateSourceTrigger=PropertyChanged}"
                         t:TextBoxHelper.Placeholder="Workout Name"
                         Background="#184E77"
                         Foreground="White"
                         FontSize="16"
                         Padding="8"
                         BorderThickness="0"/>

                <TextBox Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}"
                         AcceptsReturn="True"
                         t:TextBoxHelper.Placeholder="Notes"
                         Height="60"
                         Background="#184E77"
                         Foreground="White"
                         FontSize="16"
                         Padding="8"
                         BorderThickness="0"
                         Margin="0,8,0,0"/>

                <TextBlock Text="Exercises:"
                           FontSize="18"
                           Foreground="White"
                           Margin="0,10,0,5"/>

                <!-- Exercise list -->
                <ItemsControl ItemsSource="{Binding Exercises}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#52B69A" Margin="0,5,0,5" Padding="10">
                                <StackPanel Orientation="Vertical">
                                    <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                                             FontSize="14" Padding="6" t:TextBoxHelper.Placeholder="Exercise Name"
                                             Background="#76C893" Foreground="Black" BorderThickness="0"/>
                                    <TextBox Text="{Binding Note, UpdateSourceTrigger=PropertyChanged}"
                                             FontSize="14" Padding="6" t:TextBoxHelper.Placeholder="Exercise Notes"
                                             Background="#76C893" Foreground="Black" BorderThickness="0"
                                             Margin="0,4,0,0"/>

                                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                        <TextBox Text="{Binding Weight, Converter={StaticResource IntConverter}}" PreviewTextInput="NumberValidationTextBox" Width="80" t:TextBoxHelper.Placeholder="Weight"
                                                 Background="#76C893" Foreground="Black" Padding="6" BorderThickness="0"/>
                                        <ComboBox ItemsSource="{Binding DataContext.WeightUnits, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                  SelectedItem="{Binding WeightUnit}"
                                                  t:TextBoxHelper.Placeholder="{Binding WeightUnit}"
                                                  Width="80"
                                                  Background="#76C893" BorderThickness="0" Margin="4,0,0,0"/>
                                        <ComboBox ItemsSource="{Binding DataContext.EquipmentTypes, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                  SelectedItem="{Binding Equipment}"
                                                  t:TextBoxHelper.Placeholder="{Binding Equipment}"
                                                  Width="120"
                                                  Background="#76C893" BorderThickness="0" Margin="4,0,0,0"/>
                                        <TextBox Text="{Binding Reps, Converter={StaticResource IntConverter}}" PreviewTextInput="NumberValidationTextBox" Width="60"
                                                    t:TextBoxHelper.Placeholder="Reps"
                                                 Background="#76C893" Foreground="Black" Padding="6" BorderThickness="0"
                                                 Margin="4,0,0,0"/>
                                    </StackPanel>

                                    <Button Content="Remove"
                                            Command="{Binding DataContext.RemoveExerciseCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Background="#184E77"
                                            Foreground="White"
                                            FontWeight="Bold"
                                            BorderThickness="0"
                                            Width="100"
                                            Margin="0,6,0,0"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Add Exercise Button -->
                <Button Content="+ Add Exercise"
                        Command="{Binding AddExerciseCommand}"
                        Background="#34A0A4"
                        Foreground="White"
                        FontWeight="Bold"
                        Height="40"
                        BorderThickness="0"
                        Margin="0,10,0,0"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Complete Workout Button -->
        <Button Grid.Row="2"
                Content="Complete Workout"
                Command="{Binding CompleteWorkoutCommand}"
                Background="#184E77"
                Foreground="White"
                FontWeight="Bold"
                FontSize="18"
                Height="30"
                BorderThickness="0"
                HorizontalAlignment="Center"
                Width="250"/>
        <Button Grid.Row="2"
        Content="Save As Template"
        Command="{Binding SaveAsTemplateCommand}"
        Background="#184E77"
        Foreground="White"
        FontWeight="Bold"
        FontSize="18"
        Height="30"
        BorderThickness="0"
        Margin="0,100,0,20"
        HorizontalAlignment="Center"
        Width="250"/>
    </Grid>
</UserControl>
